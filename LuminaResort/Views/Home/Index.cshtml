@model List<LuminaResort.Models.Paquete>

@{
    ViewData["Title"] = "HomePage";
}

<section id="Home" class="container-bg">
    <div class="bg-degraded">
        <div class="title vw-100 vh-100 d-flex justify-content-center align-items-center">
            <h1 class="tagline text-center">Where the sun meets fun<br>Do you want to try it?</h1>
        </div>
    </div>
</section>

<section id="AboutUs" class="about-us d-flex justify-content-center align-items-center">
    <div class="w-45">
        <h3 class="mini-title text-center">ABOUT</h3>
        <h2 class="title text-center">Peace is our identity</h2>
        <p class="text-1 text-center">In Lumina we offer you the right packages to meet your needs.</p>
        <p class="text-2 text-center">We focus on giving the peace that we all deserve, through our human qualities and good services, but above all we have the passion to serve.</p>
    </div>
</section>

<section id="Packages" class="packages d-flex justify-content-center align-items-center">
    <div>
        <div>
            <h3 class="mini-title text-center">PACKAGES</h3>
            <h2 class="title text-center">All our packages</h2>
            <p class="text-1 text-center">We adjust to different budgets so you can enjoy.</p>
        </div>

        @if (Model != null)
        {
            <div class="row mt-4">
                @foreach (var paquete in Model)
                {
                <div class="col-lg-4 mb-4">
                    
                        <div class="package-card me-4">
                            <div class="pcard-degraded p-5">
                                <div class="pcard-body">
                                    <h4 class="location">Puntarenas</h4>
                                    <h2 class="pcard-title mt-5">@paquete.NombrePaquete</h2>
                                    <h3 class="pcard-hotel">Lumina Resort</h3>
                                    <p class="pcard-description mt-4">@paquete.Descripcion</p>
                                </div>
                                <div class="pcard-footer d-flex justify-content-center align-items-center mt-4">
                                    <a class="btn btn-light" asp-area="" asp-controller="Reserva" asp-action="Reservar"> @paquete.MensualidadPaquete</a>
                                    <h2 class="pcard-price ms-3">$@paquete.CostoPaquete.ToString("N2").Replace(".", "").Substring(0, 3)</h2>
                                </div>
                            </div>
                        </div>
                    
                </div>
                }
            </div>
        }
        else
        {
            <p>No packages available.</p>
        }
</section>

<section id="Contact" class="contact container-fluid">
    <div class="row align-items-center">
        <div class="mb-4">
            <div>
                <h3 class="mini-title text-center">CONTACT US</h3>
                <h2 class="title text-center">Solve your doubts</h2>
                <p class="text-1 text-center">Fill out the form below, and we will contact you as soon as possible.</p>
            </div>
            <form class="contact-form-ly">
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control">
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control">
                    </div>
                    <div class="col">
                        <label class="form-label">Phone (Optional)</label>
                        <input class="form-control">
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Message</label>
                    <textarea class="form-control" rows="4"></textarea>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <p class="contact-info">(+506) 2250 4321</p>
                        <p class="contact-info">sales@lumina.com</p>
                    </div>
                    <div class="col text-end">
                        <button type="submit" class="btn-send">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
